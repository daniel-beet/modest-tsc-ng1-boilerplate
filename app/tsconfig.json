{
    "compilerOptions": {
        "module": "amd",
        "target": "es5",
        "noResolve": false,
        "declaration": true,
        "diagnostics": true
    },
    "filesGlob": [
        "./**/*.ts",
        "!../../node_modules/**/*.ts"
    ],
    "bundles": {
        "app": {
            "files": [
                "./main.ts"
            ]
        },
        "components": {
            "config": {
                "declaration": true,
                "outDir": "./bundles",
                "minify": true
            }
        }
    }
}